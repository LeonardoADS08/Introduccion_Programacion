#include "stdafx.h"
#include <iostream>
#include <conio.h>
using namespace std;
bool esPar(int n);
int main()
{
	int n, k;
	cout << "Ingrese cantidad de  numeros a analizar" << endl;
	cin >> n;
	for (int i = 0; i < n; ++i)
	{
		cout << "Ingrese numero" << endl;
		cin >> k;
		if (esPar(k)) cout << "Es par" << endl;
		else cout << "Es impar" << endl;
	}
	getch();
	return 0;
}

bool esPar(int n)
{
	return n%2 == 0;
}
