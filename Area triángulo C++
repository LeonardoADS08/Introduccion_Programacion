#include "stdafx.h"
#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	float a, b, c, s;
	cout << "Lado a: " << endl;
	cin >> a;
	cout << "Lado b: " << endl;
	cin >> b;
	cout << "Lado c: " << endl;
	cin >> c;
	s = (a + b + c)/2;
	cout << "El area del triangulo es: " << sqrt(s*(s-a)*(s-b)*(s-c)) << endl;
	system("PAUSE");
	return 0;
}

